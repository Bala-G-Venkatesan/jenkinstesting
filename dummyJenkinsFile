pipeline {
    agent any
    tools {
        jdk 'jdk17'
        nodejs 'node16'
    }
    stages {
        stage('Clean Workspace') {
            steps {
                deleteDir()
            }
        }
        stage('Git Checkout') {
            steps {
                git branch:'main', url:'https://github.com/Aj7Ay/Netflix-clone.git'

            }
        }
        stage('Installing Dependency') {
            steps {
                sh 'npm install'
            }
        }
    }
} 
